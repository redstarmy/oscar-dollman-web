{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../shared/*.ts"],
  "exclude": ["frontend/src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": "",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "noEmit": false
  }
}
