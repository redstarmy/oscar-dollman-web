{
  "name": "geeek_server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start-frontend": "vite",
    "start-backend": "NODE_ENV=development nodemon backend.ts",
    "docker-build-run-dev": "docker run -v ./images:/app/images -p 3000:3000 -it $(docker build -f Dockerfile.dev -q .)",
    "docker-build-run-prod": "docker run -v ./images:/app/images -p 3000:3000 -it $(docker build -f Dockerfile.prod -q .)",
    "docker-push": "docker buildx build -f Dockerfile.prod --platform linux/arm64/v8,linux/amd64 -t redstarmy/geeek-server:latest --push .",
    "build-prod": "NODE_ENV=production run-p type-check build-only",
    "build-dev": "NODE_ENV=development run-p type-check build-only",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@vueuse/components": "^10.5.0",
    "@vueuse/core": "^10.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.8",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.50.0",
    "eslint-plugin-vue": "^9.17.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "~5.2.2",
    "vite": "^4.4.11",
    "vue-tsc": "^1.8.15"
  }
}
